<h2>Send invitation</h2>

<%= form_for @user, :url => send_invitation_admin_users_path do |f| %>

   <table style='width: 50%'>
    <tr>
        <td><%= f.text_field :first_name, placeholder: "First name" %></td>
    </tr>
    <tr>
        <td><%= f.text_field :middle_name, placeholder: "Middle name" %></td>
    </tr>
    <tr>
        <td><%= f.text_field :last_name, placeholder: "Last name" %></td>
    </tr>
    <tr>
        <td><%= f.text_field :email, :required => true, placeholder: "Email" %></td>
    </tr>
   </table>

  <%= f.submit  "Send an Invitation" %>
<% end %>
