<div class="background-container">
  <div class="signin-container">

    <h2>Ooftypop</h2><br />

    <div class="signin-form">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field signin-fields">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", id: "sessions-email" %>
        </div><br />

        <div class="field signin-fields">
          <%= f.label :password %><br />
          <%= f.password_field :password, autocomplete: "off", id: "sessions-password" %>
        </div><br />

        <% if devise_mapping.rememberable? -%>
          <div class="field signin-fields">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div><br />
        <% end -%>

        <div class="actions signin-fields">
          <%= f.submit "Log in", id: "sessions-submit" %>
        </div><br />
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
