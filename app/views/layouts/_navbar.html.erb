<div class="container">
  <nav class="navbar navbar-fixed-top navbar-light">
    <div class="container">
    <%= link_to 'Ooftypop'.html_safe, root_path, class: "navbar-brand" %>
    <% if current_user.nil? %>
      <ul class="nav navbar-nav">

        <li class="nav-item">
          <%= link_to "Services", "#{root_path}#services", class: "nav-link" %>
        </li>

        <li class="nav-item">
          <%= link_to "Work", "#{root_path}#work", class: "nav-link" %>
        </li>

        <li class="nav-item">
          <%= link_to "Hire Us", "#{root_path}#contact", class: "nav-link" %>
        </li>
        <li class="nav-item">
            <%= link_to 'Sign In', user_session_path, class: "nav-link" %>
        </li>
      </ul>
    </div>
    <% else %>
    <div class="container">
      <ul class="nav navbar-nav">
        <li class="nav-item">
          <%= link_to 'Dashboard', dashboard_index_path, class: "dash-link" %>
        </li>
        <li>
          <%= link_to 'Home'.html_safe, root_path, class: "home-link" %>
        </li>
      </ul>
      <div class="btn-group dropleft profile-dropdown">
        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          <a class="fa fa-cog"></a>
        </button>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
          <ul>
            <li class="dropdown-item">
              <%= link_to "Edit Profile", edit_user_path(id: current_user.id), class: "edit-link" %>
            </li>
            <li class="dropdown-item">
              <%= link_to('Logout', destroy_user_session_path, method: :delete, class: "destroy-link") %>
            </li>
          </ul>
        </div>
      </div>
    </div>
    <% end %>
  </nav>
</div>

<script>
  var mobile = document.createElement('div');
  mobile.className = 'nav-mobile';
  document.querySelector('.nav').appendChild(mobile);
</script>
