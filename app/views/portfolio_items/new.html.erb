<div class="col-xs-12 col-md-6 col-md-offset-3">
  <div class="form-container">
    <%= form_for @portfolio_item do |f| %>

      <div>
        <%= f.text_field :title,
          placeholder: "Portfolio Title",
          class: "portfolio_title form-control" %>
      </div>

      <div>
        <%= f.text_area :description,
          placeholder: "Description",
          class: "portfolio-description form-control",
          style: "height: 150px;" %>
      </div>

      <div>
        <%= f.text_field :url,
          placeholder: "Web Address",
          class: "portfolio-url form-control" %>
      </div>

      <div class="submit-buttom">
        <%= f.submit "Create",
            class: "submit-clicker btn btn-primary" %>
      </div>

    <% end %>
  </div>
</div>
